<div class="mb-6">
    <div class="flex items-center justify-between">
        <label class="block text-sm font-medium mb-1" for="body">
            body
            <span class="text-rose-500">*</span>
        </label>
    </div>
    <%= f.text_field :body, class: "form-input w-full mb-2", id: "body" %>

    <div class="flex items-center justify-between">
        <label class="block text-sm font-medium mb-1" for="path">
            path
        </label>
        <div class="text-sm text-slate-400 italic">optional</div>
    </div>
    <%= f.text_field :path, class: "form-input w-full mb-2", id: "path" %>

</div>

<ul class="mb-4">

    <li class="text-sm w-full flex justify-between py-3 border-b border-slate-200">
        <div>id</div>
        <div class="font-medium text-slate-800"><%= @staff_comment.id %></div>
    </li>


    <li class="text-sm w-full flex justify-between py-3 border-b border-slate-200">
        <div>staff_name</div>
        <div class="font-medium text-slate-800"><%= @staff_comment.staff_name %></div>
    </li>


    <div>
        <div class="text-left"></div>
    </div>
    <li class="text-sm w-full flex justify-between py-3 border-b border-slate-200">
        <div>created_at</div>
        <div class="font-medium text-slate-800">
            <% if @staff_comment.created_at.present? %>
                <%=l @staff_comment.created_at, format: :short %>
            <% end %>
        </div>
    </li>


    <div>
        <div class="text-left"></div>
    </div>
    <li class="text-sm w-full flex justify-between py-3 border-b border-slate-200">
        <div>updated_at</div>
        <div class="font-medium text-slate-800">
            <% if @staff_comment.updated_at.present? %>
                <%=l @staff_comment.updated_at, format: :short %>
            <% end %>
        </div>
    </li>


</ul>
<div class="mb-4">
    <button class="btn w-full bg-indigo-500 hover:bg-indigo-600 text-white">저장</button>
</div>


